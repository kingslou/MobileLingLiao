<resources  xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialSettings.Red" parent="MaterialSettingsTheme">
        <item name="msColorPrimary">@color/colorPrimary</item>
        <item name="msColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="msColorAccent">@color/colorPrimaryDark</item>
        <item name="msColorHeader">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialSettings.Dark" parent="MaterialSettingsThemeDark">
        <!--
        <item name="msToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="msToolbarThemePopup">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="msColorPrimary">@color/darkPrimary</item>
        <item name="msColorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="msColorAccent">@color/darkAccent</item>
        <item name="msWindowBg">@color/darkBg</item>
        <item name="msColorHeader">@color/darkText</item>
        <item name="msColorTextTitle">@color/darkText</item>
        <item name="msColorTextSubTitle">@color/darkText</item>
        -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowTitleStyle">@style/TitleDialogTextStyle</item>
    </style>

    <style name="TitleDialogTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="wrapping_fa_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">50dp</item>
    </style>

    <!--this properties set for Toolbar-->
    <!--setting overlay theme and secondaryColor of Toolbar-->
    <style name="myThemeForToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#fff</item>

    </style>

</resources>
